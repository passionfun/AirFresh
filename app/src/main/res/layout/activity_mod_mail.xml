<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.activity.ModMailActivity" >

    <com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar
    	android:id="@+id/titleBar_modify_mail"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:layout_centerHorizontal="true" >
	</com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar>
    
    <EditText
    	android:id="@+id/et_new_mail"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/titleBar_modify_mail"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="16dp"
    	android:layout_marginLeft="16dp"
    	android:layout_marginRight="16dp"
    	android:background="@drawable/suggest_input"
    	android:hint="@string/new_mail"
    	android:ems="10"
    	android:singleLine="true"
    	android:inputType="textEmailAddress" >

    	<requestFocus />
    </EditText>
    
    <Button
		android:id="@+id/btn_uemail"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_marginTop="16dp"
		android:layout_marginLeft="22dp"
    	android:layout_marginRight="22dp"
		android:text="@string/btn_confirm"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/et_new_mail"
		android:typeface="monospace"
		android:textSize="20sp"
		android:textColor="#ffffff"
		android:textStyle="bold"
		android:background="@drawable/background_button_style4" />


</RelativeLayout>
