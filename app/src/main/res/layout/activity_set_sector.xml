<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

    <com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar
    	android:id="@+id/titleBar_set_sector"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
	</com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar>

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@+id/titleBar_set_sector"
    	android:layout_marginTop="20dp"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
    	android:orientation="vertical" >

        <TextView
        	android:id="@+id/tv_start_and_stop"
        	android:layout_width="wrap_content"
        	android:layout_height="50dp"
        	android:textSize="20sp"
        	android:gravity="center"
        	android:text="@string/set_start_and_stop" />

        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:orientation="horizontal" >

            <TextView
            	style="@style/SetStyle"
            	android:id="@+id/tv_start"
            	android:text="12:00" />

            <TextView
            	style="@style/SetStyle"
            	android:id="@+id/textView2"
            	android:gravity="center"
            	android:text="至" />

            <TextView
            	style="@style/SetStyle"
            	android:id="@+id/tv_stop"
            	android:gravity="right"
            	android:text="15:00" />

        </LinearLayout>

        <TextView
        	android:id="@+id/divider1"
        	android:layout_width="match_parent"
        	android:layout_height="1dp"
        	android:background="#dddddd" />

        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:orientation="horizontal"
        	android:visibility="gone" >

            <TextView
            	style="@style/SetStyle"
            	android:id="@+id/textView1"
            	android:text="@string/air_speed" />

            <TextView
            	style="@style/SetStyle"
            	android:id="@+id/textView4" />

            <TextView
            	style="@style/SetStyle"
            	android:id="@+id/tv_airspeed"
            	android:gravity="right"
            	android:text="低速" />

            <ImageView
            	android:id="@+id/iv_set_sector_airspeed"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_gravity="center"
            	android:src="@drawable/arrow" />

        </LinearLayout>

        <TextView
        	android:id="@+id/divider2"
        	android:layout_width="match_parent"
        	android:layout_height="1dp"
        	android:background="#dddddd"
        	android:visibility="gone" />
        
        <LinearLayout
        	android:id="@+id/layout_work_time"
        	android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:orientation="horizontal">

            <TextView
            	style="@style/SetStyle"
            	android:id="@+id/textView5"
            	android:text="@string/work_time" />

            <TextView
            	style="@style/SetStyle"
            	android:id="@+id/textView6"/>

            <TextView
            	style="@style/SetStyle"
            	android:id="@+id/tv_set_work_time"
            	android:gravity="right"
            	android:text="10min" />

        </LinearLayout>

        <TextView
        	android:id="@+id/divider3"
        	android:layout_width="match_parent"
        	android:layout_height="1dp"
        	android:background="#dddddd" />
        
        <LinearLayout
        	android:id="@+id/layout_rest_time"
        	android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:orientation="horizontal" >

            <TextView
            	style="@style/SetStyle"
            	android:id="@+id/textView8"
            	android:text="@string/rest_time" />

            <TextView
            	style="@style/SetStyle"
            	android:id="@+id/textView9" />

            <TextView
            	style="@style/SetStyle"
            	android:id="@+id/tv_set_rest_time"
            	android:gravity="right"
            	android:text="1min" />

        </LinearLayout>

        <TextView
        	android:id="@+id/divider4"
        	android:layout_width="match_parent"
        	android:layout_height="1dp"
        	android:background="#dddddd" />
        
        <TextView
        	android:id="@+id/tv_circle"
        	android:layout_width="wrap_content"
        	android:layout_height="50dp"
        	android:textSize="20sp"
        	android:gravity="center"
        	android:text="@string/set_circle" />

        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:orientation="horizontal" >

            <com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.WeeklyBar
            	android:id="@+id/weeklyBar_circle"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent" >
			</com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.WeeklyBar>

        </LinearLayout>

        <TextView
        	android:id="@+id/divider5"
        	android:layout_width="match_parent"
        	android:layout_height="1dp"
        	android:background="#dddddd" />
        
        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="20dp"
        	android:orientation="horizontal" >

            <Button
            	style="@style/SetStyle"
            	android:id="@+id/btn_close"
            	android:layout_height="50dp"
            	android:layout_weight="2"
            	android:background="@drawable/background_button"
            	android:text="取消" />

            <TextView
            	style="@style/SetStyle"
            	android:id="@+id/textView11"/>

            <Button
            	style="@style/SetStyle"
            	android:id="@+id/btn_start"
            	android:layout_height="50dp"
            	android:layout_weight="2"
            	android:background="@drawable/background_button"
            	android:text="确认" />
            
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
