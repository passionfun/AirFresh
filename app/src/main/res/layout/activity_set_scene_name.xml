<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.activity.SetSceneNameActivity" >

    <com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar
    	android:id="@+id/titleBar_Scene_name"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
	</com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar>

    <EditText
    	android:id="@+id/et_new_scene_name"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/titleBar_Scene_name"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="20dp"
    	android:layout_marginRight="20dp"
    	android:layout_marginLeft="20dp"
    	android:background="@drawable/suggest_input"
    	android:ems="10"
    	android:singleLine="true" >

    	<requestFocus />
    </EditText>
	<Button
		android:id="@+id/btn_uscene"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_marginTop="16dp"
		android:layout_marginLeft="24dp"
    	android:layout_marginRight="24dp"
		android:text="@string/btn_confirm"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/et_new_scene_name"
		android:typeface="monospace"
		android:textSize="20sp"
		android:textColor="#ffffff"
		android:textStyle="bold"
		android:background="@drawable/background_button_style4" />
</RelativeLayout>
