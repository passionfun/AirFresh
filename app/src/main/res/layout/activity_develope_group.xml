<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.activity.DevelopeGroupActivity" >

    <com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar
    	android:id="@+id/titleBar_developer"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:layout_centerHorizontal="true">
	</com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar>

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@+id/titleBar_developer"
    	android:layout_centerHorizontal="true"
    	android:orientation="vertical" >

        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1"
        	android:orientation="vertical"
        	android:background="@drawable/tab4_logo_bg" >

            <ImageView
            	android:id="@+id/iv_dafeng_logo"
            	android:layout_width="96dp"
            	android:layout_height="96dp"
            	android:src="@drawable/dafeng_logo"
            	android:layout_gravity="center" />
            
            <TextView
			android:id="@+id/tv_group_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="@string/group_name"
			android:textSize="18sp"
			android:typeface="monospace" />
            
        </LinearLayout>

        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="2"
        	android:orientation="vertical" 
        	android:background="@drawable/tab4_logo_bg">

            <LinearLayout
            	android:layout_width="match_parent"
            	android:layout_height="50dp"
            	android:orientation="horizontal"
            	android:layout_marginTop="16dp" >

                <TextView
                	android:id="@+id/tv_group"
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="2"
                	android:text="浙江达峰科技有限公司"
                	android:textSize="18sp"
                	android:layout_gravity="center"
                	android:gravity="center" />

            </LinearLayout>

            <TextView
            	android:id="@+id/textView1"
            	android:layout_width="match_parent"
            	android:layout_height="1dp"
            	android:background="#cccccc"
            	android:text="TextView" />
            
            <LinearLayout
            	android:layout_width="match_parent"
            	android:layout_height="50dp"
            	android:orientation="horizontal" >

                <TextView
                	android:id="@+id/tv_local"
                	android:layout_width="match_parent"
                	android:layout_height="wrap_content"
                	android:text="杭州市余杭区五常大道158号"
                	android:textSize="18sp"
                	android:layout_gravity="center" 
                	android:gravity="center"/>

            </LinearLayout>
            
            <TextView
            	android:id="@+id/textView3"
            	android:layout_width="match_parent"
            	android:layout_height="1dp"
            	android:background="#cccccc"
            	android:text="TextView" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
