<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.activity.ProblemDetailActivity" >

   <com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar
    	android:id="@+id/titleBar_problem_detail"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
   </com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar>

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" >

        <TextView
        	android:id="@+id/tv_problem_name"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:typeface="monospace"
        	android:text="TextView" 
        	android:textSize="25sp"
        	android:layout_gravity="center|left"/>
    	
    </LinearLayout>
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/button_quicklink"
    	android:orientation="vertical" >

        <TextView
        	android:id="@+id/tv_problem_detail"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:typeface="monospace"
        	android:textSize="20sp"
        	android:text="TextView" />

    </LinearLayout>

</LinearLayout>
