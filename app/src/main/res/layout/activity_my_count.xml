<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.activity.MyCountActivity" >

    <com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar
    	android:id="@+id/titleBar_my_counter"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:layout_centerHorizontal="true" >
	</com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar>

    <LinearLayout
        android:id="@+id/layout_user_center"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@+id/titleBar_my_counter"
    	android:layout_centerHorizontal="true"
    	android:orientation="vertical"
    	android:visibility="invisible" >

        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:orientation="vertical"
        	android:layout_weight="1"
        	android:background="@drawable/tab4_logo_bg" >

            <ImageView
            	android:id="@+id/iv_user_pic"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:src="@drawable/user_icon"
            	android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="2"
        	android:orientation="vertical"
        	android:background="@drawable/tab4_item_bg" >

            <LinearLayout
            	android:id="@+id/layout_user_name"
            	android:layout_width="match_parent"
            	android:layout_height="0dp"
            	android:layout_weight="1"
            	android:orientation="horizontal" >

                <TextView
                	android:id="@+id/tv_user_name_cap"
                	android:layout_width="0dp"
                	android:layout_weight="1"
                	android:layout_height="wrap_content"
                	android:text="@string/user_name"
                	android:textSize="16sp"
                	android:typeface="monospace"
                	android:layout_gravity="center" />

                <TextView
                	android:id="@+id/tv_user_name"
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="2"
                	android:text=""
                	android:textSize="16sp"
                	android:layout_gravity="center" />

            </LinearLayout>

            <TextView
        	android:id="@+id/divider1"
        	android:layout_width="match_parent"
        	android:layout_height="1dp"
        	android:background="#dddddd" />
            
            <LinearLayout
            	android:id="@+id/layout_commit_addr"
            	android:layout_width="match_parent"
            	android:layout_height="0dp"
            	android:layout_weight="1"
            	android:orientation="horizontal" >

                <TextView
                	android:id="@+id/tv_commit_addr_cap"
                	android:layout_width="0dp"
                	android:layout_weight="1"
                	android:layout_height="wrap_content"
                	android:text="@string/commit_addr"
                	android:textSize="16sp" 
                	android:layout_gravity="center"
                	android:typeface="monospace"/>

                <TextView
                	android:id="@+id/tv_commit_addr"
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="2"
                	android:text="杭州市余杭区五常大道158号"
                	android:textSize="16sp" 
                	android:layout_gravity="center"/>
                
            </LinearLayout>

            <TextView
        	android:id="@+id/divider2"
        	android:layout_width="match_parent"
        	android:layout_height="1dp"
        	android:background="#dddddd" />
            
            <LinearLayout
            	android:id="@+id/layout_mail"
            	android:layout_width="match_parent"
            	android:layout_height="0dp"
            	android:layout_weight="1"
            	android:orientation="horizontal" >

                <TextView
                	android:id="@+id/tv_user_mail_cap"
                	android:layout_width="0dp"
                	android:layout_weight="1"
                	android:layout_height="wrap_content"
                	android:text="@string/user_mail"
                	android:textSize="16sp" 
                	android:layout_gravity="center"
                	android:typeface="monospace"/>

                <TextView
                	android:id="@+id/tv_user_mail"
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="2"
                	android:text="123456789@dafeng.com"
                	android:textSize="16sp" 
                	android:layout_gravity="center"/>
                
            </LinearLayout>

            <TextView
        	android:id="@+id/divider3"
        	android:layout_width="match_parent"
        	android:layout_height="1dp"
        	android:background="#dddddd" />
            
            <LinearLayout
            	android:id="@+id/layout_modify_code"
            	android:layout_width="match_parent"
            	android:layout_height="0dp"
            	android:layout_weight="1"
            	android:orientation="horizontal" >

                <TextView
                	android:id="@+id/tv_user_password"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:text="@string/modify_password"
                	android:textSize="16sp" 
                	android:layout_gravity="center"
                	android:typeface="monospace"/>

            </LinearLayout>

        </LinearLayout>
        
        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="2"
        	android:orientation="vertical"
        	android:background="#f3f2f2" >
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
