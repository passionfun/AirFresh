<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.activity.SceneConfigActivity" >

	<com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar
		android:id="@+id/titleBar_scene_config"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true" >
	</com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/titleBar_scene_config"
		android:layout_centerHorizontal="true"
		android:background="@drawable/sence_bg"
		android:orientation="vertical" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1.58"
			android:background="@drawable/tab4_logo_bg"
			android:orientation="vertical" >

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent" >

				<TextView
					android:id="@+id/tv_scene_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_centerHorizontal="true"
					android:clickable="false"
					android:text="情景名称"
					android:textSize="20sp"
					android:typeface="monospace" />

				<ImageView
					android:id="@+id/iv_scene_icon"
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:layout_above="@+id/tv_scene_name"
					android:layout_marginBottom="5dp"
					android:layout_centerHorizontal="true" />

			</RelativeLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="4"
			android:layout_marginBottom="20dp"
			android:orientation="vertical"
			android:background="@drawable/tab4_logo_bg" >

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/sland"
				android:orientation="horizontal" >

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent" >

				<ScrollView
					android:id="@+id/scrollview"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1.3" >

					<LinearLayout
						android:id="@+id/layout_list"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="horizontal">

						<RadioGroup
							android:id="@+id/rg_device_select_item"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1" >
						</RadioGroup>

						<RadioGroup
							android:id="@+id/rg_device_item"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="3" >
						</RadioGroup>

						<TextView
							android:id="@+id/textView1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="0.5"/>

					</LinearLayout>
				</ScrollView>

				<LinearLayout
					android:id="@+id/layout_device_property"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:layout_marginRight="10dp"
					android:orientation="vertical"
					android:visibility="invisible"
					>

					<TextView
						android:id="@+id/tv_sc_device_name"
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:text="设备名称"
						android:textSize="18sp"
						android:gravity="center"
						android:layout_gravity="center" />

					<TextView
						android:id="@+id/tv_spinder1"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#cccccc" />

					<TextView
						android:id="@+id/tv_sc_device_power"
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:gravity="center"
						android:textSize="16sp"
						android:text="工作状态" />

					<com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.SwitchButton
						android:id="@+id/sb_device_prop_power"
						android:layout_width="wrap_content"
						android:layout_height="40dp">
					</com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.SwitchButton>

					<TextView
						android:id="@+id/tv_spinder3"
						android:layout_width="match_parent"
						android:layout_height="10dp" />

					<TextView
						android:id="@+id/tv_spinder2"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#cccccc" />

					<TextView
						android:id="@+id/tv_sc_device_control"
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:gravity="center"
						android:textSize="16sp"
						android:text="控制界面" />

					<Button
						android:id="@+id/btn_sc_device_control"
						android:layout_width="100dp"
						android:layout_height="40dp"
						android:layout_gravity="center"
						android:background="@drawable/background_button_style4"
						android:textColor="#FFFFFF"
						android:textSize="18sp"
						android:text="确定" />

					<TextView
						android:id="@+id/tv_spinder5"
						android:layout_width="match_parent"
						android:layout_height="10dp" />

					<TextView
						android:id="@+id/tv_spinder4"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#cccccc" />
					<!-- <Button
                        android:id="@+id/btn_sc_device_save"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_button_style4"
                        android:text="保存"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" /> -->

				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
