<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_marginTop="16dp"
	android:layout_height="match_parent"
	android:orientation="vertical" >

    <ImageView
    	android:id="@+id/iv_wifi_icon"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentTop="true"
    	android:src="@drawable/wifi_level_1" />

    <TextView
    	android:id="@+id/tv_ssid_name"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignBottom="@+id/iv_wifi_icon"  
        android:layout_marginBottom="10dp"  
        android:layout_toRightOf="@+id/iv_wifi_icon" 
    	android:text="TextView" />

    <TextView
    	android:id="@+id/tv_distance"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignBaseline="@+id/tv_ssid_name"  
        android:layout_alignBottom="@+id/tv_ssid_name"  
        android:layout_alignParentRight="true"  
    	android:text="TextView" />

</RelativeLayout>
