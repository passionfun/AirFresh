<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.activity.ModUserKeyActivity" >

	<com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar
		android:id="@+id/titleBa_modify_userkey"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true" >
	</com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/titleBa_modify_userkey"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:orientation="vertical" >

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_weight="2"
			android:layout_gravity="center"
			android:layout_marginTop="20dp"
			android:orientation="vertical" >

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >

				<TextView
					android:id="@+id/tv_old_key_tag"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textSize="16sp"
					android:text="@string/old_key" />

				<EditText
					android:id="@+id/et_old_key"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:hint="@string/old_key"
					android:inputType="textPassword"
					android:text=""
					android:textSize="16sp"
					android:ems="11" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >

				<TextView
					android:id="@+id/tv_new_key_tag"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textSize="16sp"
					android:text="@string/new_key" />

				<EditText
					android:id="@+id/et_new_key"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:hint="@string/new_key"
					android:inputType="textPassword" 
					android:text=""
					android:textSize="16sp"
					android:ems="11" />
			</LinearLayout>


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:id="@+id/tv_confirm_key_tag"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textSize="16sp"
					android:text="@string/code_confirm" />

				<EditText
					android:id="@+id/et_confirm_key"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:ems="10"
					android:hint="@string/code_confirm_hint"
					android:text=""
					android:textSize="16sp"
					android:inputType="textPassword" />
			</LinearLayout>

			<Button
				android:id="@+id/btn_upassword"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:layout_marginTop="20dp"
				android:textSize="20sp"
				android:background="@drawable/background_button_style4" 
				android:textColor="#ffffff"
				android:typeface="monospace"
				android:text="@string/btn_confirm" />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>