<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/device_list_bg" >

    <Button
    	android:id="@+id/btn_add_device"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textColor="#666666"
    	android:textSize="20sp"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="5dp"
    	android:layout_marginBottom="5dp"
    	android:background="@drawable/button_quicklink"
    	android:text="@string/quicklink" />

    <TextView
        android:id="@+id/tv_spinder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/btn_add_device"
		android:background="#bbbbbb" />

    <ListView
    	android:id="@+id/lv_devices"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="10dp"
    	android:layout_below="@+id/tv_spinder"
    	android:layout_centerHorizontal="true"
    	android:footerDividersEnabled="false" >

    </ListView>

</RelativeLayout>
