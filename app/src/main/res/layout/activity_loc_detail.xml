<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.activity.LocDetailActivity" >

    <com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar
    	android:id="@+id/titleBar_set_detail"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true">
	</com.example.bonfeel.perfumediffuser_beifen_chineseappanv311.custom.TitleBar>
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@+id/titleBar_set_detail"
    	android:layout_margin="10dp"
    	android:orientation="vertical" >

        <LinearLayout
        	android:id="@+id/layout_province"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >

            <TextView
            	android:id="@+id/tv_location_province"
            	android:layout_width="match_parent"
            	android:layout_height="50dp"
            	android:textSize="20sp"
            	android:typeface="monospace"
            	android:gravity="center|left"
            	android:text="@string/province" />
        	
        </LinearLayout>
        
		<TextView
        	android:id="@+id/divider1"
        	android:layout_width="match_parent"
        	android:layout_height="1dp"
        	android:background="#cccccc" />
		
        <LinearLayout
        	android:id="@+id/layout_street"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:visibility="gone" >

            <TextView
            	android:id="@+id/tv_location_street"
            	android:layout_width="match_parent"
            	android:layout_height="50dp"
            	android:textSize="20sp"
            	android:typeface="monospace"
            	android:gravity="center|left"
            	android:text="@string/street"
            	android:hint="@string/street_hint" />

        </LinearLayout>
        
		<TextView
        	android:id="@+id/divider2"
        	android:layout_width="match_parent"
        	android:layout_height="1dp"
        	android:background="#cccccc"
        	android:visibility="gone" />
		
        <LinearLayout
        	android:id="@+id/layout_detail"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >

            <EditText
            	android:id="@+id/et_location_detail"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:ems="10" 
            	android:singleLine="true"
            	android:layout_gravity="center|left"
            	android:hint="@string/detail_hint"
            	android:background="@drawable/suggest_input">
            </EditText>

        </LinearLayout>

        <TextView
        	android:id="@+id/divider3"
        	android:layout_width="match_parent"
        	android:layout_height="1dp"
        	android:background="#cccccc"
        	android:visibility="gone" />
        
        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="20dp"
        	android:orientation="vertical" >

            <Button
            	android:id="@+id/btn_save_location"
            	android:layout_width="match_parent"
            	android:layout_height="60dp"
            	android:background="@drawable/background_button_style4"
            	android:text="@string/save"
            	android:textSize="20sp"
            	android:textColor="#ffffff" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
